<div class="container">
        <div class="col">
            <%= link_to 'Tweet', new_user_tweet_path(current_user), class: "btn btn-primary" %>
        </div>
    <div class="row">
        
        <div class="col">
            <h2>tweets</h2>
            <%= render partial: "tweets" , locals: {user: current_user, tweets: @tweets } %>
        </div>
        
        <div class="col">
            
            <h2>Followers</h2>
            <%= render partial: "followers" , locals: {user: current_user } %>
        </div>
        <div class="col">
            
            <h2>Following</h2>
            <%= render partial: "followees" , locals: {user: current_user } %>
        </div>
    </div>
</div>