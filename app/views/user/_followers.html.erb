<% user.followers.each do |follower| %>
    <div class="row">
        
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><%= link_to follower.name, user_path(follower) %></h5>
                <h6 class="card-subtitle mb-2 text-muted">@<%= follower.username %></h6>
            </div>
        </div>
    </div>
<% end %>
